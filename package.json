{
  "name": "formplex",
  "private": "true",
  "engines": {
    "node": ">=20 <21"
  },
  "repository": "git@github.com:pavliuk-ii/formplex.git",
  "author": "Ihor Pavliuk <akira.pavl@gmail.com>",
  "scripts": {
    "lint:fs": "ls-lint",
    "lint:ts": "yarn workspaces run lint:ts",
    "lint": "yarn run lint:fs && yarn workspace backend run lint",
    "build:backend": "yarn workspace backend run build",
    "build:frontend": "yarn workspace frontend run build",
    "build": "yarn workspaces run build",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db -d",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && yarn workspace backend run prisma:dev:deploy",
    "start:backend": "yarn workspace backend run start:dev",
    "start:frontend": "yarn workspace frontend run start"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "@ls-lint/ls-lint": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}
